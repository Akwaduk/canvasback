{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "experimentalDecorators": true,
      "useDefineForClassFields": false,
      "outDir": "dist",
      "rootDir": "src",
      "declaration": true,
      "declarationDir": "dist"
    },
    "exclude": ["node_modules/**/*", "dist/**/*"],
    "include": ["src/**/*"]
  }
  